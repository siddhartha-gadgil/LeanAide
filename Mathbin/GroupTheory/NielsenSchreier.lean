  quiverGenerators : Quiver.{v + 1} (IsFreeGroupoid.Generators G)
  of : ‚àÄ {a b : IsFreeGroupoid.Generators G}, (a ‚ü∂ b) ‚Üí ((show G from a) ‚ü∂ b)
  unique_lift :
    ‚àÄ {X : Type v} [Group‚Çì X] (f : Labelling (IsFreeGroupoid.Generators G) X),
      ‚àÉ! F : G ‚•§ SingleObj X, ‚àÄ (a b) (g : a ‚ü∂ b), F.map (of g) = f g

