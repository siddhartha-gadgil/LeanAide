def ofMagma [Mul G] : G →ₙ* MonoidAlgebra k G where
  toFun := fun a => single a 1
  map_mul' := fun a b => by
    simp only [← mul_def, ← mul_oneₓ, ← sum_single_index, ← single_eq_zero, ← mul_zero]

/-- The embedding of a unital magma into its magma algebra. -/
