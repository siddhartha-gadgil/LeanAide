theorem NeBot.smul_zero_nonneg (hf : f.ne_bot) : 0 ‚â§ f ‚Ä¢ (0 : Filter Œ≤) :=
  le_smul_iff.2 fun t‚ÇÅ h‚ÇÅ t‚ÇÇ h‚ÇÇ =>
    let ‚ü®a, ha‚ü© := hf.nonempty_of_mem h‚ÇÅ
